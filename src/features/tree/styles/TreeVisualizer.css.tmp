/* Tree Visualizer - Clean Professional Design v3.0 */
@import url('https://fonts.googleapis.com/css2?family=Rajdhani:wght@700;900&display=swap');

/* Root container */
.app-container {
  min-height: 100vh;
  background: #0d1117;
  color: #c9d1d9;
  font-family: 'Rajdhani', -apple-system, BlinkMacSystemFont, sans-serif;
  position: relative;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  height: 100vh; /* Ensure full viewport height */
}

/* Background effects */
.app-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: 
    radial-gradient(circle at 10% 20%, rgba(255, 255, 255, 0.03) 1px, transparent 1px),
    radial-gradient(circle at 30% 40%, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
  background-size: 50px 50px, 70px 70px;
  animation: twinkling 100s linear infinite;
  pointer-events: none;
  z-index: 0;
}

@keyframes twinkling {
  from { transform: translate3d(0, 0, 0); }
  to { transform: translate3d(-100px, -100px, 0); }
}

/* Header styles */
.app-header {
  padding: 2rem;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  background: rgba(13, 17, 23, 0.8);
  backdrop-filter: blur(10px);
  position: relative;
  z-index: 10;
  min-height: 80px;
  flex-shrink: 0; /* Prevent header from shrinking */
}

.app-header h1 {
  font-size: 2.5rem;
  font-weight: 900;
  background: linear-gradient(135deg, #58a6ff 0%, #a855f7 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-align: center;
  letter-spacing: -0.02em;
  margin: 0;
  text-shadow: 0 0 30px rgba(88, 166, 255, 0.3);
}

.home-button {
  position: absolute;
  left: 2rem;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  background: linear-gradient(135deg, #58a6ff 0%, #4dabf7 100%);
  color: white;
  text-decoration: none;
  border-radius: 8px;
  font-weight: 600;
  transition: all 0.3s ease;
  border: none;
  cursor: pointer;
}

.home-button:hover {
  transform: translateY(-50%) translateY(-2px);
  box-shadow: 0 10px 25px rgba(88, 166, 255, 0.3);
}

/* -------------- FIXED LAYOUT SYSTEM -------------- */

/* Main content area - true 50/50 split with Grid */
.main-content {
  display: grid;
  grid-template-columns: 1fr 1fr;  /* True 50/50 split */
  gap: 1.5rem; 
  padding: 1.5rem;
  position: relative;
  z-index: 1;
  flex: 1;
  height: calc(100vh - 100px); /* Viewport height minus header */
  min-height: 0; /* Allow container to shrink if needed */
  overflow: hidden; /* Prevent scrolling at container level */
}

/* Panel base styles - both panels share identical structure */
.code-panel,
.visualization-panel {
  background: rgba(33, 38, 45, 0.8);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  backdrop-filter: blur(10px);
  display: flex;
  flex-direction: column;
  overflow: hidden; /* Hide overflow */
  height: 100%; /* Fill entire grid cell */
}

/* Headers for panels */
.code-header,
.visualization-header {
  background: rgba(255, 255, 255, 0.05);
  padding: 1rem;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-shrink: 0; /* Don't allow header to shrink */
}

.code-header h2,
.visualization-header h2 {
  font-size: 1.2rem;
  font-weight: 700;
  margin: 0;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.code-header h2 { color: #58a6ff; }
.visualization-header h2 { color: #a855f7; }

.language-badge {
  background: #58a6ff;
  color: white;
  padding: 0.3rem 0.6rem;
  border-radius: 5px;
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
}

/* Content containers - both scroll independently */
.code-content,
.visualization-content {
  flex: 1; /* Take remaining space */
  overflow: auto; /* Enable scrolling */
  min-height: 0; /* Allow content to shrink if needed */
}

.visualization-content {
  padding: 0;
  display: flex;
  flex-direction: column;
  overflow-y: auto;
  height: 100%;
}

/* For code presentation */
.code-content pre {
  margin: 0 !important;
  background: transparent !important;
  font-size: 0.85rem !important;
  line-height: 1.5 !important;
  height: auto !important; /* Let height be determined by content */
  min-height: 0 !important; /* No minimum height constraint */
  max-height: none !important; /* No maximum height constraint */
}

/* Mobile responsiveness */
@media (max-width: 1000px) {
  .main-content {
    grid-template-columns: 1fr; /* Stack vertically */
    grid-template-rows: 1fr 1fr; /* Equal height rows */
    height: auto;
    min-height: calc(100vh - 100px);
  }
  
  .code-panel,
  .visualization-panel {
    height: 500px; /* Fixed height on mobile */
    min-height: 0;
  }
}

/* Tree Display - The main visualization area */
.tree-display {
  position: relative;
  height: 100%;
  min-height: 300px;
  flex: 1;
  overflow: auto;
  padding: 1rem 0.5rem;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

.tree-display.animating {
  background: rgba(88, 166, 255, 0.05);
  border-radius: 8px;
}

/* Custom scrollbars for tree-display */
.tree-display::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

.tree-display::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 10px;
}

.tree-display::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 10px;
}

.tree-display::-webkit-scrollbar-thumb:hover {
  background: rgba(255, 255, 255, 0.3);
}

/* Improve syntax highlighting colors */
.code-content .token.comment {
  color: #6a9955 !important;
  font-style: italic;
}

.code-content .token.keyword {
  color: #569cd6 !important;
  font-weight: 600;
}

.code-content .token.string {
  color: #ce9178 !important;
}

.code-content .token.number {
  color: #b5cea8 !important;
}

.code-content .token.function {
  color: #dcdcaa !important;
}

.code-viewer {
  width: 100%;
  height: 100%;
  background: transparent;
  color: #c9d1d9;
  font-family: 'Fira Code', 'SF Mono', Consolas, monospace;
  font-size: 0.9rem;
  line-height: 1.5;
  overflow-y: auto;
  padding: 1rem;
}

.code-line {
  display: flex;
  align-items: flex-start;
  padding: 0.2rem 0;
  white-space: pre-wrap;
  word-wrap: break-word;
}

.line-number {
  color: #6e7681;
  font-size: 0.8rem;
  width: 3rem;
  text-align: right;
  margin-right: 1rem;
  user-select: none;
  flex-shrink: 0;
}

.line-content {
  flex: 1;
}

.highlighted-line {
  background-color: rgba(88, 166, 255, 0.15);
  border-left: 3px solid #58a6ff;
  margin-left: -1rem;
  padding-left: calc(1rem - 3px);
}

/* Controls section */
.controls-section {
  background: rgba(255, 255, 255, 0.03);
  border-radius: 10px;
  padding: 1.2rem;
  margin-bottom: 1rem;
  border: 1px solid rgba(255, 255, 255, 0.08);
}

.control-group {
  margin-bottom: 1rem;
}

.control-group:last-child {
  margin-bottom: 0;
}

.control-group h3 {
  color: #58a6ff;
  font-size: 0.9rem;
  font-weight: 600;
  margin: 0 0 1rem 0;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.input-controls {
  display: flex;
  gap: 0.8rem;
  align-items: center;
  flex-wrap: wrap;
}

.value-input {
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 6px;
  padding: 0.6rem 0.8rem;
  color: #c9d1d9;
  font-size: 0.8rem;
  min-width: 140px;
  transition: all 0.3s ease;
}

.value-input:focus {
  outline: none;
  border-color: #58a6ff;
  box-shadow: 0 0 0 3px rgba(88, 166, 255, 0.1);
  background: rgba(255, 255, 255, 0.15);
}

.control-btn {
  background: linear-gradient(135deg, #58a6ff 0%, #4dabf7 100%);
  color: white;
  border: none;
  border-radius: 6px;
  padding: 0.6rem 1rem;
  font-size: 0.8rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  gap: 0.4rem;
  box-shadow: 0 2px 8px rgba(88, 166, 255, 0.2);
}

.control-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(88, 166, 255, 0.3);
}

.control-btn:active {
  transform: translateY(0);
}

.control-btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
  transform: none;
  box-shadow: 0 2px 8px rgba(88, 166, 255, 0.1);
}

.control-btn.search {
  background: linear-gradient(135deg, #40c057 0%, #37b24d 100%);
  box-shadow: 0 2px 8px rgba(64, 192, 87, 0.2);
}

.control-btn.search:hover {
  box-shadow: 0 4px 12px rgba(64, 192, 87, 0.3);
}

.control-btn.generate {
  background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
  box-shadow: 0 2px 8px rgba(139, 92, 246, 0.2);
}

.control-btn.generate:hover {
  box-shadow: 0 4px 12px rgba(139, 92, 246, 0.3);
}

.control-btn.delete {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  box-shadow: 0 2px 8px rgba(239, 68, 68, 0.2);
}

.control-btn.delete:hover {
  box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
}

.control-btn.traversal {
  background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);
  box-shadow: 0 2px 8px rgba(6, 182, 212, 0.2);
}

.control-btn.traversal:hover {
  box-shadow: 0 4px 12px rgba(6, 182, 212, 0.3);
}

.control-btn.delete {
  background: linear-gradient(135deg, #f85149 0%, #da3633 100%);
}

.control-btn.delete:hover {
  box-shadow: 0 5px 15px rgba(248, 81, 73, 0.3);
}

.control-btn.generate {
  background: linear-gradient(135deg, #a855f7 0%, #9333ea 100%);
}

.control-btn.generate:hover {
  box-shadow: 0 5px 15px rgba(168, 85, 247, 0.3);
}

.control-btn.traversal {
  background: linear-gradient(135deg, #0891b2 0%, #0e7490 100%);
  color: white;
  font-size: 0.85rem;
}

.control-btn.traversal:hover {
  box-shadow: 0 5px 15px rgba(8, 145, 178, 0.3);
}

.control-btn.animation {
  background: linear-gradient(135deg, #059669 0%, #047857 100%);
  color: white;
  font-size: 0.9rem;
  min-width: 40px;
}

.control-btn.animation:hover {
  box-shadow: 0 5px 15px rgba(5, 150, 105, 0.3);
}

.control-btn.animation.stop {
  background: linear-gradient(135deg, #ff4757 0%, #ff3838 100%);
}

.control-btn.animation.stop:hover {
  background: linear-gradient(135deg, #ff3838 0%, #ff2f2f 100%);
  transform: translateY(-2px);
}

.control-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.animation-controls {
  display: flex;
  gap: 0.5rem;
  justify-content: center;
  align-items: center;
  margin-bottom: 1rem;
}

.speed-control {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  margin-bottom: 1rem;
}

.speed-control label {
  font-size: 0.9rem;
  color: #c9d1d9;
  text-align: center;
}

.speed-labels {
  display: flex;
  justify-content: space-between;
  font-size: 0.8rem;
  color: #6e7681;
  margin-top: 0.25rem;
}

.speed-slider {
  -webkit-appearance: none;
  appearance: none;
  width: 100%;
  height: 6px;
  border-radius: 3px;
  background: rgba(255, 255, 255, 0.1);
  outline: none;
  cursor: pointer;
}

.speed-slider::-webkit-slider-thumb {
  -webkit-appearance: none;
  appearance: none;
  width: 18px;
  height: 18px;
  border-radius: 50%;
  background: linear-gradient(135deg, #58a6ff 0%, #4dabf7 100%);
  cursor: pointer;
  box-shadow: 0 2px 8px rgba(88, 166, 255, 0.3);
  transition: all 0.2s ease;
}

.speed-slider::-webkit-slider-thumb:hover {
  transform: scale(1.1);
  box-shadow: 0 4px 12px rgba(88, 166, 255, 0.5);
}

.speed-slider::-moz-range-thumb {
  width: 18px;
  height: 18px;
  border-radius: 50%;
  background: linear-gradient(135deg, #58a6ff 0%, #4dabf7 100%);
  cursor: pointer;
  border: none;
  box-shadow: 0 2px 8px rgba(88, 166, 255, 0.3);
}

.step-info {
  text-align: center;
  font-size: 0.9rem;
  color: #6e7681;
  padding: 0.5rem;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 6px;
  margin-top: 0.5rem;
}

/* Tree nodes */
.tree-node {
  cursor: pointer;
  transition: all 0.3s ease;
}

.tree-node circle {
  fill: #238636;
  stroke: #2ea043;
  stroke-width: 2;
  transition: all 0.3s ease;
}

.tree-node text {
  fill: white;
  font-weight: 600;
  font-size: 14px;
  text-anchor: middle;
  dominant-baseline: central;
}

.tree-node:hover circle {
  fill: #2ea043;
  stroke: #58a6ff;
}

.tree-node.highlighted circle {
  fill: #58a6ff;
  stroke: #4dabf7;
  stroke-width: 3;
}

.tree-node.found circle {
  fill: #f85149;
  stroke: #da3633;
  stroke-width: 3;
}

/* Tree edges */
.tree-edge {
  stroke: #6e7681;
  stroke-width: 2;
  fill: none;
  transition: all 0.3s ease;
}

.tree-edge.highlighted {
  stroke: #58a6ff;
  stroke-width: 3;
}

/* Empty tree state improvements */
.empty-tree {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #6e7681;
  text-align: center;
  gap: 2rem;
  padding: 4rem 2rem;
  min-height: 500px;
  width: 100%;
}

.empty-tree-icon {
  font-size: 5rem;
  opacity: 0.3;
  color: #58a6ff;
  animation: gentle-pulse 3s ease-in-out infinite;
}

@keyframes gentle-pulse {
  0%, 100% { 
    opacity: 0.3; 
    transform: scale(1);
  }
  50% { 
    opacity: 0.5; 
    transform: scale(1.05);
  }
}

.empty-tree h3 {
  font-size: 2rem;
  margin: 0;
  color: #c9d1d9;
  font-weight: 700;
}

.empty-tree p {
  margin: 0;
  font-size: 1.2rem;
  color: #8b949e;
}

.empty-tree-hints {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  margin-top: 2rem;
  width: 100%;
  max-width: 500px;
}

.hint {
  background: rgba(88, 166, 255, 0.15);
  border: 2px solid rgba(88, 166, 255, 0.3);
  border-radius: 12px;
  padding: 1rem 1.5rem;
  font-size: 1rem;
  color: #c9d1d9;
  transition: all 0.3s ease;
  cursor: pointer;
}

.hint:hover {
  background: rgba(88, 166, 255, 0.25);
  border-color: rgba(88, 166, 255, 0.5);
  transform: translateY(-3px);
  box-shadow: 0 8px 25px rgba(88, 166, 255, 0.2);
}

/* SVG tree sizing */
.tree-svg, .svg-tree {
  width: 100%;
  height: 100%;
  min-height: 300px;
}

/* Responsive adjustments */
@media (max-width: 1200px) {
  .tree-display {
    min-height: 400px;
  }
  
  .tree-svg, .svg-tree {
    min-height: 350px;
  }
}

@media (max-width: 768px) {
  .app-header {
    padding: 1rem;
    flex-direction: column;
    gap: 1rem;
  }
  
  .home-button {
    position: static;
    transform: none;
  }
  
  .app-header h1 {
    font-size: 1.8rem;
  }
  
  .main-content {
    padding: 0.75rem;
    gap: 0.75rem;
  }
  
  .tree-display {
    min-height: 300px;
  }
}
